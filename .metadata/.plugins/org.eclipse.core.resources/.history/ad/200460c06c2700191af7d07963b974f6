package objects;

public class GradedPlane extends Plane implements PlaneColorer{
	public Vector3 mainColor, secColor
	
	public GradedPlane(Vector3 point, Vector3 u, Vector3 v, Vector3 mainColor, Vector3 secColor) {
		super(point, u, v, Vector3.ZERO);
		this.color
		setColor(this); // bad form?
	}

	@Override
	public Vector3 getColor(Vector2 UVPoint) {
		Vector3.weightSum(v1, v2, scale)
	}
	
}
